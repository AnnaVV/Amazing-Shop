@model IEnumerable<AmazingShop.Models.ProductList>
<div class="page-header">
    @Html.ActionLink("< To LIst", "Index", "Category", null, new { @class = "btn btn-primary" })
    <span style="font-size:x-large">@ViewBag.CategoryName</span>
</div>

@foreach (var item in Model)
{
    var imgUrl = item.Image ?? "http://placehold.it/100x120";
    <div class="media">
        <a class="pull-left" href="#">
            <img class="media-object" src="@imgUrl"/>
        </a>
        <div class="media-body">
            <h4 class="media-heading">@item.ProductName</h4>
            <p>@item.Description</p>
            <div class="pull-right" >
                @Html.ActionLink("Add to Chart", "AddToChart", "Chart", new { item.Id }, new { @class = "btn btn-primary btn-lg btn-block" })
               
                <p class="btn btn-default btn-lg btn-block">$ @item.Price</p>
            </div>
        </div>
    </div>
}